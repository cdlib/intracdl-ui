<div class="c-vimeo-full-width">
  {{!-- Embed HTML provided by Vimeo for responsive sizing: --}}
  <div class="c-vimeo-full-width__embed" style="padding:54.43% 0 0 0;position:relative;">
    <iframe src="https://player.vimeo.com/video/{{ vimeo.id }}?title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
  </div>
  <div class="c-vimeo-full-width__caption">
    <p>
      {{ vimeo.caption }}
    </p>
  </div>
  <a class="c-vimeo-full-width__more-link" href="{{ vimeo.link.url }}">{{ vimeo.link.text }}</a>
  <script src="https://player.vimeo.com/api/player.js"></script>
</div>
